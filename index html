    <script>
        const formatter = new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP', minimumFractionDigits: 0 });
        const inputFormatter = new Intl.NumberFormat('es-CL');

        function formatValue(val) {
            const clean = val.replace(/\D/g, "");
            return clean === "" ? "" : inputFormatter.format(clean);
        }

        function handleNumericInput(el) {
            const start = el.selectionStart, len = el.value.length;
            el.value = formatValue(el.value);
            const diff = el.value.length - len;
            el.setSelectionRange(start + diff, start + diff);
            calculateAll();
            calculateReverse();
        }

        function parseNum(val) { return parseFloat(String(val).replace(/\./g, "")) || 0; }

        function changeQty(delta) {
            const el = document.getElementById('quantity');
            let val = parseNum(el.value) + delta;
            el.value = formatValue(String(val < 1 ? 1 : val));
            calculateAll();
        }

        function resetAll() {
            document.getElementById('costPrice').value = "";
            document.getElementById('quantity').value = "1";
            document.getElementById('reverseSalePrice').value = "";
            document.getElementById('includeIva').checked = false;
            calculateAll();
            calculateReverse();
        }

        function calculateAll() {
            const cost = parseNum(document.getElementById('costPrice').value);
            const qty = parseNum(document.getElementById('quantity').value);
            const includeIva = document.getElementById('includeIva').checked;
            const comisionPct = parseFloat(document.getElementById('comisionType').value) / 100;
            
            const standard = [25, 30, 35, 40, 50];
            const tbody = document.getElementById('resultsTableBody');
            tbody.innerHTML = '';

            if(cost > 0) document.getElementById('reposicionCard').classList.remove('hidden');
            else document.getElementById('reposicionCard').classList.add('hidden');

            standard.forEach(p => {
                const markup = cost * (p / 100);
                const netoPrice = cost + markup;
                const finalPvp = includeIva ? netoPrice * 1.19 : netoPrice;
                
                const comision = finalPvp * comisionPct;
                const unitProfit = markup - comision;
                const totalVenta = finalPvp * qty;
                const totalProfit = unitProfit * qty;

                const row = document.createElement('tr');
                row.className = `transition-colors hover:bg-slate-50 ${p === 35 ? 'bg-emerald-50/50' : ''}`;
                row.innerHTML = `
                    <td class="px-4 py-4 text-center font-bold text-slate-700">${p}% ${p===35?'<span class="block text-[8px] text-emerald-600">RECOM.</span>':''}</td>
                    <td class="px-4 py-4 text-slate-900 font-bold">${formatter.format(finalPvp)}</td>
                    <td class="px-4 py-4 text-emerald-600 font-medium">+ ${formatter.format(unitProfit)}</td>
                    <td class="px-4 py-4 text-right font-bold text-slate-500 bg-blue-50/20">${formatter.format(totalVenta)}</td>
                    <td class="px-4 py-4 text-right font-black text-blue-600 bg-emerald-50/20">${formatter.format(totalProfit)}</td>
                `;
                tbody.appendChild(row);
            });

            document.getElementById('totalReposicion').innerText = formatter.format(cost * qty);
        }

        function calculateReverse() {
            const cost = parseNum(document.getElementById('costPrice').value);
            const salePrice = parseNum(document.getElementById('reverseSalePrice').value);
            const includeIva = document.getElementById('includeIva').checked;
            const comisionPct = parseFloat(document.getElementById('comisionType').value) / 100;

            if (cost <= 0 || salePrice <= 0) {
                document.getElementById('reverseResultPct').innerText = "0";
                document.getElementById('reverseResultAmount').innerText = "$0";
                document.getElementById('comisionDescuento').innerText = "$0";
                return;
            }

            const netoSale = includeIva ? (salePrice / 1.19) : salePrice;
            const comisionMonto = salePrice * comisionPct;
            const profit = (netoSale - cost) - comisionMonto;
            const margin = ((profit + cost) / cost - 1) * 100;

            document.getElementById('reverseResultPct').innerText = margin.toFixed(1);
            document.getElementById('reverseResultAmount').innerText = formatter.format(profit);
            document.getElementById('comisionDescuento').innerText = formatter.format(comisionMonto);
        }

        function sendWhatsApp(phone) {
            const cost = document.getElementById('costPrice').value || "0";
            const qty = document.getElementById('quantity').value || "1";
            const iva = document.getElementById('includeIva').checked ? "S칈" : "NO";
            const comisionLabel = document.getElementById('comisionType').options[document.getElementById('comisionType').selectedIndex].text;
            
            let message = `*游늵 INFORME DE GANANC
